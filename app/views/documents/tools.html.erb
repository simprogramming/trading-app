<div class="header">
  <div class='top'>
    <%= link_to "/documents" do %>
      <p><i class="fas fa-chevron-left"></i>   BACK</p>
    <% end %>
  </div>
  <h1>Tools</h1>
  <%=link_to " + Add a new source", new_document_path, class: "btn btn-primary btn-flat" %>
</div>

<% @tools.each do |tool| %>
  <div class="card-edu">
    <i class="fas fa-book-tools"></i>
    <div class="card-edu-infos">
      <a href="<%= tool.url %>"><h2><%= tool.title %></h2></a>
      <h4><%= tool.content %></h4>
    </div>
  </div>
<% end %>