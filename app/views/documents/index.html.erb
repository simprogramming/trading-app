<div class="homedisplay">

  <div class="container">
    <div class="col">
      <div class="scoreboard-banner">
        <h1 class="text-center mt-5">Documents</h1>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="icons">
      <%= link_to "/documents/administratives" do %>
        <i class="fas fa-university"></i>
        <p>Administrative</p>
      <% end %>
      <%= link_to "/documents/tools" do %>
        <i class="fas fa-tools"></i>
        <p>Tools</p>
      <% end %>
      <%= link_to "/documents/educations" do %>
        <i class="fas fa-book-reader"></i>
        <p>Lectures</p>
      <% end %>
      <%= link_to "/documents/portfolios" do %>
        <i class="fas fa-file-powerpoint"></i>
        <p>Portfolio</p>
      <% end %>
      <%= link_to "/documents/articles" do %>
        <i class="far fa-newspaper"></i>
        <p>Articles</p>
      <% end %>
    </div>
  </div>
  <%=link_to " + Add a new source", new_document_path, class: "btn btn-primary btn-flat" %>
</div>
