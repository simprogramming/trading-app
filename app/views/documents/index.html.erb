<div class="homedisplay">
  
    <h1>Documentation</h1>

    <div class="container">
      <div class="cards">
        <%= link_to "/documents/documents" do %>
          <div class="documents-card">
            <p>Documents</p>
          </div>
        <% end %>
        <%= link_to "/documents/podcasts" do %>
          <div class="podcasts-card">
            <p>Podcasts</p>
          </div>
        <% end %>
        <%= link_to "/documents/videos" do %>
          <div class="videos-card">
            <p>Videos</p>
          </div>
        <% end %>
        <%= link_to "/documents/books" do %>
          <div class="books-card">
            <p>Books</p>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class= "btn btn-primary">
      <%=link_to "Add a new source", new_document_path %>
    </div>

</div>