<h4 class="p-3"><%= link_to "Back", user_path(current_user) %></h4>
<h2 class="text-center p-5">Create a Position</h2>

<div class="broker-form">
  <%= simple_form_for [@my_position] do |f| %>
    <%= f.input :stock_id, collection: Stock.pluck(:symbol, :id), label: 'Symbol', input_html: {class: 'select2', id:'select_my_stock_id'}  %>
    <%= f.input :current_price, input_html: {readonly: "readonly"} %>
    <%= f.input :buy_sell, as: :radio_buttons, collection: ['Buy', 'Sell'], include_blank: false, label: "Entry Action"  %>
    <%= f.input :size %>
    <%= f.input :entry, label: "Entry Price" %>
    <%= f.input :iceline, label: "Iceline" %>
    <%= f.input :r1, label: "R1" %>
    <%= f.input :target, label: "Target Price" %>
    <%= f.input :stop_loss, label: "Stop Loss" %>

    <%= f.button :submit, class: "btn-secondary rounded-btn" %>
  <% end %>
</div>
