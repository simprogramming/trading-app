<div class="container border p-3 rounded my-5  w-50 ">
    <h2>Add a Stock</h2>
  <div class="form-group">
    <%= simple_form_for @stock do |f| %>
      <%= f.input :symbol, placeholder: 'AAPL or ACB.TO'   %>

      <%= f.button :submit, class: 'btn btn-primary rounded-btn' %>
    <% end %>
  </div>
</div>

<div class="container">
  <% stocks_sorted = @stocks.sort { |a, b| a <=> b } %>
  <% stocks_sorted.each do |stock| %>
    <%= link_to stock.symbol, stock_path(stock), method: :delete, data: { confirm: "Are you sure you want to delete?"}  %>
  <% end %>
</div>

