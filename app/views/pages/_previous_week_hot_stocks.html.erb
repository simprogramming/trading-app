<div class="container-hot-stocks">
  <div class="d-flex">
    <div class="card-hot-stocks">
      <div class="top scroll">
        <div class="card-category text-center">Monday</div>
        <div class="d-flex justify-content-between">
          <p class="text-left"> <%= Date.today.monday.day - 7 %> </p>
          <div class="text-right"><%= render partial: 'new_hot_stock', locals: { date: Date.today.monday - 7, direction: 'Buy' } %></div>
        </div>
        <div>
          <p>
            <% current_user.hot_stocks.where( date: Date.today.monday - 7, direction: 'Buy').each do |hot_stock| %>
              <span class="stock_ticker_buy"><%= link_to hot_stock.stock.symbol, hot_stock_path(hot_stock), method: :delete, data: { confirm: "Are you sure you want to delete?"} %></span>
            <% end %>
          </p>
        </div>
      </div>
