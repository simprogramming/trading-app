      <div class="top">
        <div class="card-category text-center">Monday</div>
        <div class="d-flex justify-content-between">
          <p class="text-left"> <%= Date.today.monday.day %> </p>
          <div><%= render partial: 'new_hot_stock', locals: { date: Date.today.monday, direction: 'Buy' } %></div>
        </div>
