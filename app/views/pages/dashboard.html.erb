<h1>Dashboard</h1>

<%= link_to "home", root_path %>

<div class="container">
  <h2>Broker</h2>
  <div class="border form row">
    <div class="col-md-8" id="new_position">
      <%= simple_form_for [@position] do |f| %>
      <%= f.input :stock_id, collection: Stock.pluck(:symbol, :id), label: 'Symbol' %>
      <%= f.input :buy_sell, as: :radio_buttons, collection: ['Buy', 'Sell'], include_blank: false, label: "Entry Action"  %>
      <%= f.input :size %>
      <%= f.input :entry, label: "price", input_html: {readonly: "readonly"} %>
      <%= f.input :baseline %>
      <%= f.input :target, label: "Target Price" %>
      <%= f.input :stop_loss, label: "Stop Loss" %>

      <%= f.button :submit, class: "btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


