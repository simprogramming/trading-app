      <h4 class="text-center">Techonology</h4>
      <div class="scroll-tables">
        <table class="table table-striped table-dark">
          <thead class="text-center text-white">
            <tr>
              <th>Symbole</th>
              <th>Date</th>
              <th>Buy</th>
              <th>Sell</th>
            </tr>
          </thead>
          <% @tech_stocks.each do |stock| %>
          <tbody class="text-white text-center">
            <tr>
              <% if stock.date > (Date.today - 10) %>
                <th><%= link_to stock.stock.symbol,  hot_stock_path(stock), method: :delete, data: { confirm: "Are you sure you want to delete?"}  %></th>
                <th><%= stock.date.to_date.strftime("%m/%d") %></th>
                <th class="<%= stock.direction == "Buy" ? 'stock_ticker_R_hit' : 'text-white' %>">Buy</th>
                <th class="<%= stock.direction == "Sell" ? 'stock_ticker_SL_hit' : 'text-white' %>">Sell</th>
              <% end %>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
