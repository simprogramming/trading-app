<div class="container mt-5">
  <div class="col-4">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: "Username",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn-secondary rounded-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <h5 class="p-5">For visitor access please send message <%= link_to 'here!', 'https://www.linkedin.com/in/simonleiva/', target: :_blank %></h5>
</div>
